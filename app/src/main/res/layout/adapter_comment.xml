<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="?android:attr/selectableItemBackground"
              android:paddingBottom="@dimen/normal_padding"
              android:paddingTop="@dimen/normal_padding">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:id="@+id/user_pic"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:id="@+id/author"
        android:paddingLeft="@dimen/small_padding"
        android:paddingStart="@dimen/small_padding"
        android:textColor="@color/blue_light"
        android:layout_toRightOf="@+id/user_pic"
        android:layout_toEndOf="@+id/user_pic"
        style="@style/SmallText"/>

    <TextView
        style="@style/SmallText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/like"
        android:layout_alignBottom="@+id/author"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/small_padding"
        android:paddingStart="@dimen/small_padding"
        android:paddingBottom="@dimen/small_padding"
        android:id="@+id/adress_and_time"
        android:layout_below="@+id/author"
        android:layout_alignLeft="@+id/author"
        android:layout_alignStart="@+id/author"
        style="@style/SmallText"/>

    <TextView
        style="@style/ContentText"
        android:padding="@dimen/small_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/content"
        android:layout_below="@+id/adress_and_time"
        android:layout_alignLeft="@+id/adress_and_time"/>

</RelativeLayout>