<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:id="@+id/joke_bottom"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/big_padding"
              android:layout_marginRight="@dimen/big_padding">

    <TextView
        style="@style/SmallText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:drawableLeft="@mipmap/ic_like_big"
        android:drawableStart="@mipmap/ic_like_big"
        android:id="@+id/like"/>

    <TextView
        style="@style/SmallText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="@string/art"
        android:drawableLeft="@mipmap/ic_dislike"
        android:drawableStart="@mipmap/ic_dislike"
        android:id="@+id/dislike"/>

    <TextView
        style="@style/SmallText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:drawableLeft="@mipmap/ic_comment"
        android:drawableStart="@mipmap/ic_comment"
        android:id="@+id/comment_num"/>

</LinearLayout>