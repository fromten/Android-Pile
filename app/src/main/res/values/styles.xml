<resources>

    <style name="SlideAnimationStyle">
        <item name="android:activityCloseEnterAnimation">@anim/anim_slide_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/anim_slide_left_to_end</item>
        <item name="android:activityOpenEnterAnimation">@anim/anim_slide_right_to_start</item>
        <item name="android:activityOpenExitAnimation">@anim/anim_slide_out_to_right</item>
    </style>

    <style name="ExplodeAnimationStyle">
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@anim/anim_center_close</item>
        <item name="android:activityOpenEnterAnimation">@anim/anim_center_open</item>
        <item name="android:activityOpenExitAnimation">@null</item>
    </style>

    <style name="ChatTextStyle" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:background">@drawable/chat_textwrap</item>
        <item name="drawerArrowStyle">@style/Widget.AppCompat.DrawerArrowToggle</item>
    </style>

    <style name="Video_Category_Button">
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/selector_video_category</item>
        <item name="android:background">@color/grey_dark</item>
    </style>

    <style name="TitleText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/titleColor</item>
    </style>

    <style name="SummaryText" parent="TextAppearance.AppCompat.Small">
    </style>

    <style name="SmallText" parent="TextAppearance.AppCompat.Small">
    </style>

    <style name="ContentText" parent="TextAppearance.AppCompat.Small.Inverse">
        ã€€<item name="android:textColor">@color/black_light</item>
    </style>

    <style name="CircleProgress" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateOnly">true</item>
        <item name="android:duration">1000</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:indeterminateDrawable">@drawable/circle_progress</item>
    </style>
</resources>
