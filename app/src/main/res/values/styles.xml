<resources>
    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.Design.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorLink">@color/link_color</item>
    </style>
    <style name="AppTheme" parent="BaseAppTheme"/>
    <style name="ChatTextStyle" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:background">@drawable/chat_textwrap</item>
    </style>
    
    <style name="TitleText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:padding">4dp</item>
    </style>
    <style name="SummaryText" parent="TextAppearance.AppCompat.Small">
        <item name="android:padding">4dp</item>
    </style>
    <style name="SmallText" parent="TextAppearance.AppCompat.Small">
    </style>
    <style name="ContentText" parent="TextAppearance.AppCompat.Small">
        <item name="android:padding">4dp</item>
    </style>

    <style name="CircleProgress" parent="Base.Widget.AppCompat.ProgressBar">
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:background">@drawable/circle_progress</item>
    </style>
</resources>
